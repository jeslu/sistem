<h1>ventas realizadas</h1>

<div class="table-responsive">
  <table class="table">
     
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Importe</th>
      <th scope="col">Fecha</th>
    </tr>
  </thead>
  <tbody>
  
  <% @ventas.each do |venta| %>
        
    <tr>
     
      <th scope="row"><%= link_to venta.id, edit_sale_path(venta) %></th>
      <td><%= venta.import%></td>
      <td><%= venta.created_at %></td>
      
    </tr>    
  <% end %>

  
  </tbody>

    
  </table>
</div>
