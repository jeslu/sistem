



<div class="shadow-lg p-3 mb-5 bg-body rounded">


<h3>DETALLE DE PRODUCTO</h3>
      <div class="row align-items-start">
        <div class="col">
          <%= render @product %>
        
          <div class="input-group mb-3" >     
           <%= link_to "Editar", edit_product_path(@product), :class => "btn btn-info" %>  <%= button_to "Eliminar", @product, method: :delete , :class => "btn btn-danger"%>
                                                                                                          
          </div>
        </div>
        <div class="col">
         <%= link_to  "nuevo movimiento", new_movimient_product_path(@product), class:"btn btn-primary" %>

        
          jaja movimientos imagen del producto
        </div>
          
      </div>
     
  </div>

 <div class="shadow-lg p-3 mb-5 bg-body rounded">
 <h1>Movimientos</h1>
 <div class="table-responsive">
  <table class="table">
    
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tipo De Movimiento</th>
      <th scope="col">Cantidad</th>
      <th scope="col">Descripcion</th>
    </tr>
  </thead>
  <tbody>
  <% @product.movimients.each do |movimient|%>
    <tr>
      <th scope="row"><%= movimient.id%></th>
      <td><%= movimient.movimient_type_name%></td>
      <td><%= movimient.cant%></td>
      <td><%= movimient.coment %></td>
      <td><%= movimient.created_at %></td>
      <td></td>
      
    </tr>
   <%end%>
  </tbody>


  </table>
</div>

 </div>