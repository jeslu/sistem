<%= form_with(model: category, :class => "row g-3") do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-4">
    <%= form.label :category %>
    <%= form.text_field :category, :class => "form-control", :placeholder => "ej. Papeleria" %>
  </div>

  <div class="col-md-4">
    <%= form.label :slug %>
    <%= form.text_field :slug, :class => "form-control", :placeholder => "ej. papeleria" %>
  </div>

  <div class ="form-check">
    <%= form.label :active %>
    <%= form.check_box :active, checked: true, :class => "form-check-input" %>
  </div>

  <div>
    <%= form.submit 'Agregar', :class => "btn btn-primary" %>
  </div>
<% end %>
