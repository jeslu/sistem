<!-- Button trigger modal -->

<%= render "home/menu" %>


<%=  form_with(url: clients_path, method: :get, class: "row g-3  justify-content-end",  data: {turbo_frame: "name"}) do |form| %>

    <div class="col-auto">
        <%= form.label :query, "." %>
      </div>
      <div class="col-auto">
        <%= form.text_field :query, class: "form-control", placeholder: "Buscar...." %>
    </div>
    <div class="col-auto">
        <%= form.submit 'BUSCAR', class: "btn btn-warning mb-3 rounded-pill" %>
    </div>
<% end %>

<h1>
<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Nuevo cliente
</button>
</h1>
<!--MODULO DE CLIENTES-->
  <div class="container">
    <div class="row align-items-start">
      <div class="col">
        <div class="accordion accordion-flush" id="accordionFlushExample">
          <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                con deudas
              </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                  <div class="table-responsive">
                    <table class="table">
                              <thead>
                                <tr>
                                  
                                  <th scope="col">nombre</th>
                                  <th scope="col">Direccion</th>
                                  <th scope="col">Celular</th>
                                </tr>
                              </thead>
                        <tbody>
                        <% @client_con_deudas.each do |con|%>
                          <tr class="table-danger">
                            
                            <td><%= con.name%></td>
                            <td><%=con.direccion%></td>
                            <td><%=con.cel %></td>
                          </tr>
                      
                      <% end %>
                        </tbody>

                  </table>
                </div>
              
              </div>
            </div>
          </div>
          
          
        </div>
       </div>
      <div class="col">
        <div class="accordion accordion-flush" id="accordionFlushExample">
          <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingsin">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapsesin" aria-expanded="false" aria-controls="flush-collapsesin">
                sin deudas
              </button>
            </h2>
            <div id="flush-collapsesin" class="accordion-collapse collapse" aria-labelledby="flush-headingsin" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                  
                   <div class="table-responsive">
                    <table class="table">
                                <thead>
                                  <tr>
                                    
                                    <th scope="col">nombre</th>
                                    <th scope="col">Direccion</th>
                                    <th scope="col">Celular</th>
                                  </tr>
                                </thead>
                          <tbody>
                          <% @client_sin_deudas.each do |sin| %>
                        <tr class="table-success">
                          
                          <td><%= sin.name%></td>
                          <td><%= sin.direccion%></td>
                          <td><%= sin.cel%></td>
                        </tr>
                        
                        <% end %>
                        
                        </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          
        </div>

        
      </div>
    
    </div>
  </div>
<!--FIN-->
  <div id="clients">  
    <div class="row shadow">
        <% @clients.each do |client| %>
             <div class="col-sm shadow">
                <%= render client %>
                <%= link_to  "cuenta",client_acounts_path(client) %>
             </div> 
          <% end %>
      </div>
  </div>





<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar Cliente</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      
         <%= render "form", client: @client %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        
      </div>
    </div>
  </div>
</div>






