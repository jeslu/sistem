<div class="shadow-lg p-3 mb-5 bg-body rounded">

<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibitedo este cliente ser guardado:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  <div class="col">
  
    <%= form.label :nombre %>
    <%= form.text_field :name, :class => "form-control", :placeholder => "Nombre"%>
  
  </div>
  <div class="col">
   <%= form.label :apellidos %>
    <%= form.text_field :apellido, :class => "form-control", :placeholder => "Apellidos" %>
    
  </div>

    <div class="col">
      <%= form.label :telefono %>
      <%= form.telephone_field :cel, :class => "form-control", :placeholder => "Numero de Celular"%>
    
    </div>

      <div >
        <%= form.label :direccion %>
        <%= form.text_field :direccion, :class => "form-control"%>
      </div>

      <div>
        <%= form.label :active %>
        <%= form.check_box :active, :class => "form-check-input" %>
      
      </div>

</div>

 <br>

  <div>
    <%= form.submit 'Crear cliente',  :class => "btn btn-primary" %>
  </div>
  
<% end %>


</div>

